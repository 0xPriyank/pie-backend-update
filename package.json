    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "16.4.7",
    "express": "^4.21.2",
    "fast-csv": "^5.0.5",
    "helmet": "8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "1.10.0",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.1",
    "otp-generator": "^4.0.1",
    "puppeteer": "^24.17.0",
    "razorpay": "^2.9.6",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@faker-js/faker": "^9.9.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "2.8.17",
    "@types/express": "^5.0.3",
    "@types/helmet": "4.0.0",
